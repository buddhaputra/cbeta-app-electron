{
  "appId": "com.buddhaputra.cbeta.app",
  "directories": {
    "buildResources": "resources"
  },
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*"
  ],
  "nsis": {
    "allowElevation": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Utility",
    "icon": "assets/appIcon.png",
    "publish": {
        "provider": "generic",
        "url": "https://your-update-server.com/updates/latest-mac.yml"
    }
  },
  "win": {
    "target": "nsis",
    "icon": "assets/appIcon.png"
  },
  "mac": {
    "category": "your.app.category.type",
    "target": "dmg"
  }
}
